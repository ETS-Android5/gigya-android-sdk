<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gigya_custom">

    <TextView
        android:id="@+id/fpv_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/verify_phone_number"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/fpv_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/fpv_registered_phones_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fpv_title_text_view"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <LinearLayout
        android:id="@+id/fpv_verification_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fpv_registered_phones_spinner"
        android:layout_alignStart="@id/fpv_registered_phones_spinner"
        android:layout_alignLeft="@id/fpv_registered_phones_spinner"
        android:layout_alignEnd="@id/fpv_registered_phones_spinner"
        android:layout_alignRight="@id/fpv_registered_phones_spinner"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fpv_verification_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_verification_code"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/fpv_verification_code_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/verification_code" />

    </LinearLayout>

    <Button
        android:id="@+id/fpv_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fpv_verification_layout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/verify" />

    <Button
        android:id="@+id/fpv_dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/fpv_action_button"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@id/fpv_action_button"
        android:layout_toLeftOf="@id/fpv_action_button"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dismiss" />

</RelativeLayout>