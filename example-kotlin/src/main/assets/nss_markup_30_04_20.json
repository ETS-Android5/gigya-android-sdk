{
  "platformAware": false,
  "routing": {
    "initial": "login",
    "default": {
      "onSuccess": "_dismiss"
    }
  },
  "screens": {
    "login": {
      "routing": {
        "onPendingRegistration": "account-update",
        "onSuccess": "_dismiss"
      },
      "action": "login",
      "appBar": {
        "textKey": "login"
      },
      "stack": "vertical",
      "children": [
        {
          "type": "label",
          "textKey": "login with site credentials:"
        },
        {
          "bind": "loginID",
          "type": "email",
          "textKey": "Email"
        },
        {
          "bind": "password",
          "type": "password",
          "textKey": "Password"
        },
        {
          "type": "submit",
          "textKey": "Submit"
        }
      ]
    },
    "register": {
      "routing": {
        "onPendingRegistration": "account-update",
        "onSuccess": "_dismiss"
      },
      "action": "register",
      "appBar": {
        "textKey": "Register"
      },
      "stack": "vertical",
      "children": [
        {
          "type": "label",
          "textKey": "Register with site credentials:"
        },
        {
          "bind": "email",
          "type": "email",
          "textKey": "Email"
        },
        {
          "bind": "password",
          "type": "password",
          "textKey": "Password"
        },
        {
          "bind": "profile.firstName",
          "type": "input",
          "textKey": "First name"
        },
        {
          "bind": "profile.lastName",
          "type": "input",
          "textKey": "Last name"
        },
        {
          "type": "submit",
          "textKey": "Submit"
        }
      ]
    },
    "account-update" : {
      "routing": {
        "onSuccess": "_dismiss"
      },
      "action": "setAccount",
      "appBar": {
        "textKey": "Account Information"
      },
      "stack": "vertical",
      "children": [
        {
          "bind": "profile.firstName",
          "type": "input",
          "textKey": "First name"
        },
        {
          "bind": "profile.lastName",
          "type": "input",
          "textKey": "Last name"
        },
        {
          "bind": "profile.email",
          "type": "input",
          "textKey": "Email"
        },
        {
          "bind": "profile.zip",
          "type": "input",
          "textKey": "Zipcode"
        },
        {
          "bind": "profile.country",
          "type": "input",
          "textKey": "Country"
        },
        {
          "type": "submit",
          "textKey": "Submit"
        }
      ]
    }
  }
}
