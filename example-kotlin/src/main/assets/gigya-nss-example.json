{
  "platformAware": false,
  "routing": {
    "initial": "register",
    "default": {
      "onSuccess": "_dismiss"
    }
  },
  "screens": {
    "login": {
      "routing": {
        "onSuccess": "_dismiss"
      },
      "action": "login",
      "appBar": {
        "textKey": "login"
      },
      "stack": "vertical",
      "children": [
        {
          "type": "label",
          "textKey": "login in with your email and password:"
        },
        {
          "bind": "loginID",
          "type": "emailInput",
          "textKey": "Email"
        },
        {
          "bind": "password",
          "type": "passwordInput",
          "textKey": "Password"
        },
        {
          "type": "submit",
          "textKey": "Submit"
        }
      ]
    },
    "register": {
      "routing": {
        "onSuccess": "_dismiss"
      },
      "action": "register",
      "appBar": {
        "textKey": "Register"
      },
      "stack": "vertical",
      "children": [
        {
          "type": "label",
          "textKey": "Register with site credentials:"
        },
        {
          "bind": "email",
          "type": "emailInput",
          "textKey": "Email"
        },
        {
          "bind": "password",
          "type": "passwordInput",
          "textKey": "Password"
        },
        {
          "type": "container",
          "stack": "horizontal",
          "alignment": "start",
          "children": [
            {
              "bind": "profile.firstName",
              "type": "textInput",
              "textKey": "First name"
            },
            {
              "bind": "profile.lastName",
              "type": "textInput",
              "textKey": "Last name"
            }
          ]
        },
        {
          "bind": "data.terms",
          "type": "checkbox",
          "textKey": "i have read and understood the terms of use"
        },
        {
          "type": "submit",
          "textKey": "Submit"
        }
      ]
    },
    "account-update" : {
      "routing": {
        "onSuccess": "_dismiss"
      },
      "action": "setAccount",
      "appBar": {
        "textKey": "Account Information"
      },
      "stack": "vertical",
      "children": [
        {
          "bind": "profile.firstName",
          "type": "textInput",
          "textKey": "First name"
        },
        {
          "bind": "profile.lastName",
          "type": "textInput",
          "textKey": "Last name"
        },
        {
          "bind": "profile.email",
          "type": "textInput",
          "textKey": "Email"
        },
        {
          "bind": "profile.zip",
          "type": "textInput",
          "textKey": "Zipcode"
        },
        {
          "bind": "profile.country",
          "type": "textInput",
          "textKey": "Country"
        },
        {
          "type": "submit",
          "textKey": "Submit"
        }
      ]
    }
  }
}
